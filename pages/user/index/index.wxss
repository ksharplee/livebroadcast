/* pages/user/index/index.wxss */
page {
  background-color: #f5f5f5;
}

.user-bg {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  overflow: hidden;
}

.user-bg image {
  position: absolute;
  z-index: 1;
}

.user-bg .content-area {
  position: absolute;
  z-index: 2;
  top: 45%;
  right: 20%;
  left: 20%;
}

.user-header-bg .content-area {
  position: absolute;
  z-index: 1;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  padding-right: 15px;
  padding-bottom: 40px;
  padding-left: 15px;
}

.user-header-bg .content-area .box {
  border: 2px solid #86cbd3;
}
