var toFixed = function (value) {
  return value.toFixed(2);
}

var subStr = function(str){
  return str.substring(0,10)
}

var parseint = function(str){
  return parseInt(str)
}

var isHas = function(str){
  return str.indexOf(',')
}

var beforeDot = function (str) {
  if (!str) {
    return '0'
  }
  return str.split('.')[0]
}

var afterDot = function (str) {
  if (!str) {
    return '00'
  }
  return str.split('.')[1] ? str.split('.')[1] : '00'
}

module.exports = {
  toFixed: toFixed,
  subStr: subStr,
  parseint: parseint,
  isHas: isHas,
  beforeDot: beforeDot,
  afterDot: afterDot
}
